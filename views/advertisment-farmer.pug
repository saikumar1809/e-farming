extend farmer
block features 
    .form__group
        a.btn.btn--black(href="/advertisment/getAdvertismentForm") Sell
    .advertisments
        each ad in ads
            .form1.login-form
                    h2(name="crop")#cropname='cropname:  '+`${ad.cropname}`
                    h2#quantity='Quantity:  '+`${ad.quantity}`
                    h2#price='Price:  '+`${ad.price}`
                    h2#user='Name:  '+`${ad.user.name}`
                    h2#number='contact details:  '+`${ad.user.phoneNo }` 
                    